---
import LogoULS from '@components/icons/LogoULS.astro'
import LogoMemoria from './LogoMemoria.astro'
import Button from './Button.astro'
interface Props {
	class?: string
}
const { class: customStyles } = Astro.props
---

<footer
	class:list={[
		customStyles,
		'bg-white text-primary flex flex-col items-center gap-6 justify-between pt-20 pb-4'
	]}
>
	<div class='grid gap-10'>
		<LogoMemoria size='lg' />
		<slot />
	</div>
	<div class='grid gap-8 -mt-20'>
		<p class='font-paragrph'>Proyecto financiado por:</p>
		<LogoULS class='w-40' />
	</div>
	<p class='font-paragraph whitespace-nowrap font-light'>
		Desarrollado por <a
			href='https://github.com/Strocs'
			class='text-blue-500 hover:text-white duration-150'>Strocs</a
		>
	</p>
</footer>
