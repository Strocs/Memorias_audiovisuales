---
interface Props {
	as?: 'a' | 'button'
	class?: string
	[x: string]: any
}

const { as: Element = 'button', class: customStyles, ...props }: Props = Astro.props

const defaultStyles = [
	'bg-transparent w-fit text-white ring-1 ring-white rounded-full px-3 font-title font-medium',
	'hover:bg-transparent hover:text-primary duration-150',
	'landscape:bg-primary landscape:ring-primary'
]
---

<Element class:list={[...defaultStyles, customStyles]} {...props}>
	<slot />
</Element>
