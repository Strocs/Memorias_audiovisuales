---
import { MuteButton } from './MuteButton'
import { PlayIcon } from './icons/PlayIcon'
import Button from './ui/Button.astro'

interface Props {
	name: string
	projectName: string
	projectYear: string
	index: number
	total: number
}

const { name, projectName, projectYear, index, total } = Astro.props
---

<aside
	class='md:text-primary absolute md:static bottom-0 w-full md:w-[28rem] h-fit z-10 grid gap-4 p-4 items-end'
>
	<article class='flex md:flex-col gap-2'>
		<section class='w-full'>
			<h2 class='text-2xl md:text-3xl md:font-bold font-semibold font-subtitle tracking-wide'>
				{name}
			</h2>
			<p class='leading-tight md:leading-none font-paragraph font-light max-w-md'>
				{projectName} - <b>{projectYear}</b>
			</p>
		</section>
	</article>
	<footer
		class='flex md:flex-col md:items-start items-center justify-between md:justify-normal md:gap-4'
	>
		<Button as='a' href='/'>Ver m√°s</Button>
		<p class='text-lg font-paragraph font-light leading-none'>
			{index} / {total}
		</p>

		<div class='flex gap-6'>
			<PlayIcon client:load />
			<MuteButton client:load />
		</div>
	</footer>
</aside>
